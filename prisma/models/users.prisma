model User {
    id           Int           @id @default(autoincrement())
    name         String
    email        String        @unique
    password     String
    role         UserRole      @default(CUSTOMER)
    phone        String?
    addresses    Address[]
    orders       Order[]
    reviews      Review[]
    transactions Transaction[]
    isActive     Boolean       @default(true)
    createdAt    DateTime      @default(now())
    updatedAt    DateTime      @updatedAt
}

enum UserRole {
    CUSTOMER
    ADMIN
}
