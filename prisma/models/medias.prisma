model Media {
    id           String   @id @default(cuid())
    url          String
    fileName     String
    mimeType     String
    size         Int
    uploadedAt   DateTime @default(now())
    blurDataURL  String?
    thumbnailUrl String?
    Book         Book?    @relation(fields: [bookId], references: [id])
    bookId       Int?
    width        Int?
    height       Int?
    Author       Author[]
}
